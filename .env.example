# Environment Configuration Example
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=FastAPI Backend Setup
APP_VERSION=1.0.0
DEBUG=True

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
# Format: postgresql://[username:password@]host:port/database
DATABASE_URL=postgresql://localhost:5432/your_database_name
DATABASE_ECHO=True

# CORS Settings
# CORS_ORIGINS=["http://localhost:3000","https://yourdomain.com"]  # Specific origins for production
CORS_ORIGINS=["*"]  # Allow all origins (development only!)
CORS_CREDENTIALS=True
CORS_METHODS=["*"]
CORS_HEADERS=["*"]
